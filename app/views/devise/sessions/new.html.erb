<div class="col-md-8 col-md-offset-2">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">Sign in</div>
			<div class="panel-body">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="field">
				<%= f.label :email %><br />
				<%= f.email_field :email, autofocus: true, :class => "form-control", :id => "inputEmail" %><br />
				</div>

				<div class="field">
				<%= f.label :password %><br />
				<%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "inputPassword" %>
				</div>

				<% if devise_mapping.rememberable? -%>
				<div class="field">
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me %>
				</div>
				<% end %>

				<%- if devise_mapping.omniauthable? %>
					<h6>Or login using:</h6>
					  <%= link_to "<span class=\"fa fa-facebook\"></span>".html_safe, omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-social-icon btn-facebook" %>
					  <%= link_to "<span class=\"fa fa-google\"></span>".html_safe, omniauth_authorize_path(resource_name, :google_oauth2), :class => "btn btn-social-icon btn-google" %>
					  <%= link_to "<span class=\"fa fa-github\"></span>".html_safe, omniauth_authorize_path(resource_name, :github), :class => "btn btn-social-icon btn-github" %>
					  <%= link_to "<span class=\"fa fa-bitbucket\"></span>".html_safe, omniauth_authorize_path(resource_name, :bitbucket), :class => "btn btn-social-icon btn-github" %>
				<% end -%>

				<div class="actions"><br />
				<%= f.submit "Log in", :class => "btn btn-primary" %>
				</div>
				<% end %>
				<br />
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
