<!DOCTYPE html>
<html>
	<head>
		<title>Squarefruit</title>
		<link rel="shortcut icon" type="image/x-icon" href="<%= asset_path('favicon.ico') %>"/>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'https://js.stripe.com/v2/', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="navbar navbar-default">
		<div class="container">
			<div class="container-fluid">
				<%= link_to products_path do %>
				<%= image_tag "sf-logo.png", :class => "pull-left", :style => "height: 37px; width: auto; margin: 3px;" %>
				<% end %>
				<div class="navbar-header">
					<%= link_to "Squarefruit Labs", products_path, :class => "navbar-brand" %>
				</div>
				<% if !user_signed_in? %>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "Register", new_user_registration_path %></li>
					<li><%= link_to "Login", new_user_session_path %></li>
				</ul>
				<% else %>
					<div class="btn-group btn-group-justfied pull-right">
						<%= link_to "New", new_product_path, :class => "btn btn-default" %>
						<%= link_to "Logout", destroy_user_session_path, method: :delete,:class => "btn btn-default" %>
					</div>
				<% end %>
				</div>
			</div>
		</div>

		<div class="container">
		<% flash.each do |notice, alert| %>
			<%= content_tag(:div, alert, class: "alert") %>
		<% end %>
			<%= yield %>
		</div>

	</body>
</html>
